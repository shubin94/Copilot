# ============================================================================
# ENVIRONMENT TEMPLATE - Copy to .env.local and fill with real values
# ============================================================================
# 
# This file is a TEMPLATE only. Copy it to .env.local and fill in your values.
# NEVER commit real credentials to git.
#
# For local development:
#   cp .env.example .env.local
#   Edit .env.local with your actual values
#
# ============================================================================

# ============================================================================
# DATABASE (Only required env variable)
# ============================================================================
# PostgreSQL connection string
# For local development with Docker:
#   DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/askdetective_v2
# For local Supabase:
#   DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/askdetective_v2

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
HOST=127.0.0.1
NODE_ENV=development

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
# For local dev, you can use in-memory sessions (no DB required)
SESSION_USE_MEMORY=true
# Or provide a secure session secret
SESSION_SECRET=your-dev-session-secret-change-in-production

# ============================================================================
# SUPABASE (REQUIRED - Environment variables only, never in database)
# ============================================================================
# IMPORTANT: Supabase credentials MUST be set via environment variables.
# They are NEVER stored in the database for security reasons.
#
# For local development:
#   SUPABASE_URL=http://127.0.0.1:54321 (local Supabase)
# For production:
#   SUPABASE_URL=https://yourproject.supabase.co (cloud Supabase)
#
# Safety Guard: In development mode (NODE_ENV=development), using a cloud
# Supabase URL will throw an error to prevent accidental production data access.
#
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.placeholder
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.placeholder

# ============================================================================
# EMAIL CONFIGURATION (Optional, stored in app_secrets table in prod)
# ============================================================================
# SENDPULSE Configuration
SENDPULSE_API_ID=your-sendpulse-api-id
SENDPULSE_API_SECRET=your-sendpulse-api-secret
SENDPULSE_SENDER_EMAIL=noreply@example.com
SENDPULSE_SENDER_NAME=Your App Name
SENDPULSE_ENABLED=false

# OR: SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=

# OR: SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# ============================================================================
# PAYMENT GATEWAYS (Optional, stored in app_secrets table in prod)
# ============================================================================
# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ============================================================================
# OAUTH PROVIDERS (Optional, stored in app_secrets table in prod)
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================================================
# EXTERNAL APIs (Optional, stored in app_secrets table in prod)
# ============================================================================
DEEPSEEK_API_KEY=
GEMINI_API_KEY=

# ============================================================================
# SECURITY & CORS (Optional, stored in app_secrets table in prod)
# ============================================================================
CSRF_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:5000,http://127.0.0.1:5000
BASE_URL=http://localhost:5000

# ============================================================================
# MONITORING (Optional, stored in app_secrets table in prod)
# ============================================================================
SENTRY_DSN=

# ============================================================================
# DEPLOYMENT HELPER (Render/Vercel only)
# ============================================================================
# Only set these during production deployment (Render, Vercel, etc.)
# In production, these should be injected by the hosting platform
# VITE_API_URL=https://your-production-api-url.com
